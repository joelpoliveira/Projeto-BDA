{
    "schemas" : [ 
        {
            "bsonType": "object",
            "title": "Movies",
            "required":[
                "_id",  
                "movieID",
                "imdbID", 
                "tmdbID", 
                "title",  
                "genres"
            ],
            "properties": {
                "_id" : {"bsonType": "number" },
                "imdbID": {"bsonType" : "number" },
                "tmdbID": {"bsonType" : "number"},
                "title": {
                    "bsonType" : "string",
                    "maxLength" : 100,
                    "minLength" : 1
                },
                "genres":{"bsonType": "string"},
                "genome_scores":{
                    "bsonType" : "array",
                    "items": {"bsonType":"objectId"}
                },
                "tags":{
                    "bsonType":"array",
                    "items":{"bsonType": "objectId"}
                },
                "ratings":{
                    "bsonType": "array",
                    "items": {"bsonType":"objectId"}
                }
            }
        },
        {
            "bsonType":"object",
            "title": "Tags",
            "required":[
                "timestamp",
                "user_id"
            ],
            "properties":{
                "timestamp" : {"bsonType": "timestamp"},
                "user_id" : {"bsonType" : "number"},
                "tag" : {
                    "bsonType" : "string",
                    "maxLength" : 250
                }
            }
        },
        {
            "bsonType" : "object",
            "title": "Ratings",
            "required":[
                "timestamp",
                "user_id",
                "rating"
            ],
            "properties":{
                "timestamp" : {"bsonType":"timestamp"},
                "user_id" : {"bsonType":"number"},
                "rating" : {"bsonType":"number"}
            }
        },
        {
            "bsonType": "object",
            "title":"Genome Scores",
            "required":[
                "tag",
                "relevance",
                "movie_id"
            ],
            "properties":{
                "tag" : {"bsonType":"string"},
                "relevance":{"bsonType":"double"},
                "movie_id":{"bsonType":"number"}
            }
        }
    ]
}

